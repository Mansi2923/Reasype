{
  "version": 2,
  "builds": [
    {
      "src": "config.ru",
      "use": "@vercel/ruby@3.3.0"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "RAILS_ENV": "production",
    "BUNDLE_DEPLOYMENT": "1",
    "BUNDLE_WITHOUT": "development:test"
  }
} 